<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/css/darkmode.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Marck+Script|Raleway:300,400,600,700|Roboto:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-lg navbar-dark bg-transparent border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Slay the dragon</a>
                <div id="dark" class="form-check form-switch fs-5 d-flex align-items-center">
                    <input class="form-check-input" type="checkbox" id="darkModeToggle" onclick="toggleDarkMode()">
                    <label class="form-check-label" for="darkModeToggle">
                        <span id="darkModeText" class="text-white"></span>
                        <span id="darkModeIcon" class="fas fa-sun" style="margin-top: 40%; margin-left: 4px; color:sandybrown;"></span>
                    </label>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Play</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a id="languageLink" class="nav-link" asp-area="" asp-page="/English" onclick="toggleLanguage()"></a>

                        </li>
                        
                    </ul>
                   

                </div>
                
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom bg-gradient">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="text-white">Socials</h2>
                    <a class="btn btn-primary btn-floating m-1" style="background-color: #0082ca" href="https://www.linkedin.com/in/teemu-kalmari-755469169/" role="button" target="_blank"><i class="fa fa-linkedin"></i></a>
                    <a class="btn btn-primary btn-floating m-1" style="background-color: #333333" href="https://github.com/temez26" role="button" target="_blank"><i class="fa fa-github"></i></a>
                </div>
                <div class="col-md-4 text-center">
                    <h1 class="main-name adjust text-white">Gaming</h1>
                    <p class="text-adjust">Slay the dragon</p>
                </div>
                <div class="col-md-4 text-md-end text-center">
                    <p class="m-0">
                        &copy; Copyright Teemu Kalmari. 
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="~/js/toggleLanguage.js" asp-append-version="true"></script>
    <script src="~/js/darkmode.js" asp-append-version="true"></script>
    

    


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>